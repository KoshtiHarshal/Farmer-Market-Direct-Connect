@model IEnumerable<FarmerMarket.Models.Product>
@{
    ViewData["Title"] = "Farmer Dashboard";
}

<div class="container">
    <h2 class="mb-4">
        <i class="fas fa-tachometer-alt"></i> Welcome, @ViewData["FarmerName"]!
    </h2>

    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card shadow-sm bg-success text-white">
                <div class="card-body">
                    <h5><i class="fas fa-boxes"></i> Total Products</h5>
                    <h2>@ViewData["TotalProducts"]</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm bg-primary text-white">
                <div class="card-body">
                    <h5><i class="fas fa-rupee-sign"></i> Total Inventory Value</h5>
                    <h2>₹@String.Format("{0:N2}", ViewData["TotalValue"])</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm bg-warning text-white">
                <div class="card-body">
                    <h5><i class="fas fa-clock"></i> Last Updated</h5>
                    <h2>@DateTime.Now.ToString("hh:mm tt")</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4>My Products</h4>
        <a asp-action="AddProduct" class="btn btn-success">
            <i class="fas fa-plus"></i> Add New Product
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Image</th>
                        <th>Product Name</th>
                        <th>Category</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Total Value</th>
                        <th>Organic</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>
                                @if (!string.IsNullOrEmpty(product.ImagePath))
                                {
                                    <img src="@product.ImagePath" alt="@product.ProductName" class="img-thumbnail" style="width: 50px; height: 50px; object-fit: cover;">
                                }
                                else
                                {
                                    <img src="/images/placeholder.jpg" alt="No image" class="img-thumbnail" style="width: 50px; height: 50px; object-fit: cover;">
                                }
                            </td>
                            <td>@product.ProductName</td>
                            <td><span class="badge bg-info">@product.Category</span></td>
                            <td>₹@product.Price / @product.Unit</td>
                            <td>@product.AvailableQuantity @product.Unit</td>
                            <td>₹@((product.Price * (product.AvailableQuantity ?? 0)).ToString("N2"))</td>
                            <td>
                                @if (product.IsOrganic)
                                {
                                    <span class="badge bg-success">Organic</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Regular</span>
                                }
                            </td>
                            <td>
                                <a asp-action="EditProduct" asp-route-id="@product.ProductId" class="btn btn-sm btn-primary">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="DeleteProduct" asp-route-id="@product.ProductId" 
                                   class="btn btn-sm btn-danger" 
                                   onclick="return confirm('Are you sure you want to delete this product?');">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> You haven't added any products yet. 
            <a asp-action="AddProduct">Add your first product</a>
        </div>
    }
</div>
