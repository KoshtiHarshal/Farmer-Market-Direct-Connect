@{
    ViewData["Title"] = "About";
}

<div class="container">
    <h2 class="mb-4"><i class="fas fa-info-circle"></i> About Farmer Market Direct Connect</h2>
    
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h4>Our Mission</h4>
            <p>
                Farmer Market Direct Connect aims to bridge the gap between farmers and consumers by eliminating 
                middlemen and providing a direct platform for fresh produce trading. We believe in empowering 
                farmers with better profit margins while ensuring consumers get quality products at fair prices.
            </p>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h4>College Information</h4>
            <p><strong>Institution:</strong> Asha M. Tarsadia Institute of Computer Science and Technology</p>
            <p><strong>Project:</strong> Web Technology with .NET - College Practical Project</p>
            <p><strong>Objective:</strong> To demonstrate ASP.NET Core MVC concepts and solve real-world agricultural problems</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h5><i class="fas fa-tractor text-success"></i> For Farmers</h5>
                    <ul>
                        <li>List your products directly</li>
                        <li>Get better prices without middlemen</li>
                        <li>Manage your inventory online</li>
                        <li>Connect with verified buyers</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h5><i class="fas fa-shopping-basket text-primary"></i> For Buyers</h5>
                    <ul>
                        <li>Browse fresh produce directly from farms</li>
                        <li>Get better prices</li>
                        <li>Contact farmers directly</li>
                        <li>Support local agriculture</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
