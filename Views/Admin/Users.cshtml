@model IEnumerable<FarmerMarket.Models.User>
@{
    ViewData["Title"] = "Manage Users";
}

<div class="container">
    <h2 class="mb-4"><i class="fas fa-users"></i> All Users</h2>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>User Type</th>
                    <th>City</th>
                    <th>State</th>
                    <th>Registered On</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.UserId</td>
                        <td>@user.Name</td>
                        <td>@user.Email</td>
                        <td>@user.Phone</td>
                        <td>
                            @if (user.UserType == "Farmer")
                            {
                                <span class="badge bg-success">Farmer</span>
                            }
                            else if (user.UserType == "Buyer")
                            {
                                <span class="badge bg-info">Buyer</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Admin</span>
                            }
                        </td>
                        <td>@user.City</td>
                        <td>@user.State</td>
                        <td>@user.CreatedAt.ToString("dd MMM yyyy")</td>
                        <td>
                            @if (user.UserType != "Admin")
                            {
                                <a asp-action="DeleteUser" asp-route-id="@user.UserId" 
                                   class="btn btn-sm btn-danger"
                                   onclick="return confirm('Are you sure you want to delete this user?');">
                                    <i class="fas fa-trash"></i>
                                </a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-3">
        <a asp-action="Dashboard" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Dashboard
        </a>
    </div>
</div>
