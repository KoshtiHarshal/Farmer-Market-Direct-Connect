@model IEnumerable<FarmerMarket.Models.Inquiry>
@{
    ViewData["Title"] = "Manage Inquiries";
}

<div class="container">
    <h2 class="mb-4"><i class="fas fa-envelope"></i> All Inquiries</h2>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Product</th>
                    <th>Buyer</th>
                    <th>Required Qty</th>
                    <th>Message</th>
                    <th>Status</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var inquiry in Model)
                {
                    <tr>
                        <td>@inquiry.InquiryId</td>
                        <td>@inquiry.Product?.ProductName</td>
                        <td>
                            @inquiry.Buyer?.Name<br>
                            <small class="text-muted">@inquiry.Buyer?.Phone</small>
                        </td>
                        <td>@inquiry.RequiredQuantity</td>
                        <td>@inquiry.Message</td>
                        <td>
                            @if (inquiry.Status == "Pending")
                            {
                                <span class="badge bg-warning">Pending</span>
                            }
                            else if (inquiry.Status == "Responded")
                            {
                                <span class="badge bg-success">Responded</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Closed</span>
                            }
                        </td>
                        <td>@inquiry.CreatedAt.ToString("dd MMM yyyy")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-3">
        <a asp-action="Dashboard" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Dashboard
        </a>
    </div>
</div>
