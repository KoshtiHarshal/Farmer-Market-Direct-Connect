@model IEnumerable<FarmerMarket.Models.Product>
@{
    ViewData["Title"] = "Manage Products";
}

<div class="container">
    <h2 class="mb-4"><i class="fas fa-box"></i> All Products</h2>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Image</th>
                    <th>Product Name</th>
                    <th>Category</th>
                    <th>Farmer</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Organic</th>
                    <th>Added On</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.ProductId</td>
                        <td>
                            @if (!string.IsNullOrEmpty(product.ImagePath))
                            {
                                <img src="@product.ImagePath" alt="@product.ProductName" class="img-thumbnail" style="width: 50px; height: 50px; object-fit: cover;">
                            }
                            else
                            {
                                <img src="/images/placeholder.jpg" alt="No image" class="img-thumbnail" style="width: 50px; height: 50px; object-fit: cover;">
                            }
                        </td>
                        <td>@product.ProductName</td>
                        <td><span class="badge bg-info">@product.Category</span></td>
                        <td>@product.Farmer?.Name</td>
                        <td>â‚¹@product.Price / @product.Unit</td>
                        <td>@product.AvailableQuantity @product.Unit</td>
                        <td>
                            @if (product.IsOrganic)
                            {
                                <span class="badge bg-success">Organic</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Regular</span>
                            }
                        </td>
                        <td>@product.CreatedAt.ToString("dd MMM yyyy")</td>
                        <td>
                            <a asp-action="DeleteProduct" asp-route-id="@product.ProductId" 
                               class="btn btn-sm btn-danger"
                               onclick="return confirm('Are you sure you want to delete this product?');">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-3">
        <a asp-action="Dashboard" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Dashboard
        </a>
    </div>
</div>
